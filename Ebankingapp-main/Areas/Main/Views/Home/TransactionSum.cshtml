@model MigrationHelper.ViewModels.TransactionViewModel

@{ Layout = "~/Areas/Main/Views/Shared/_Layout.cshtml";
    var currencyData = (SelectList)ViewData["CurrencyData"]; }

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Transfer Fund</p>

                                <form class="mx-1 mx-md-4" asp-action="TransactionSum" method="post">
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label">Account Name: @Model.FromName</label>
                                            <input type="hidden" asp-for=FromName value="@Model.FromName" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label">Account Number: @Model.FromAccNum</label>
                                           <input type="hidden" asp-for=FromAccNum value="@Model.FromAccNum" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label">Balance: £ @Model.Balance</label>
                                            <input type="hidden" asp-for=Balance value="@Model.Balance" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label">Amount</label>
                                            <input type="text" asp-for=Amount class="form-control" />
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label">Currency</label>
                                            @Html.DropDownList("CurrencyId", currencyData, htmlAttributes: new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label">Receiver Account Number</label>
                                            <input type="text" asp-for=ToAccNum class="form-control" />
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label">Remark</label>
                                            <input type="text" asp-for=Remarks class="form-control" />
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Save</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="popupModal" tabindex="-1" role="dialog" aria-labelledby="aModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="aModalLabel">Message</h4>
            </div>
            <div class="modal-body">
                @ViewBag.Result
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>


@{ if (ViewBag.Result != null)
                {

                    <script src="~/lib/jquery/dist/jquery.js"></script>
                                    <script type="text/javascript">
                                        $(function () {
                                            $("#popupModal").modal('show');
                                        });
                                    </script> } }