@model List<MigrationHelper.ViewModels.TransactionAmountViewModel>

@{ Layout = "~/Areas/Main/Views/Shared/_Layout.cshtml";
 }

<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Transaction</p>
                @foreach (var item in Model)
                {
                        @if (item.SendStatus == true)
                        {

                            <div class="card text-black" style="border-radius: 25px;">
                            <div class="card-body p-md-5">
                                <div class="row justify-content-center">
                                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1  bg-danger">
                                        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sent Amount</p>
                                        <div class="d-flex flex-row align-items-center mb-4 ">
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label">
                                                    <b>Name</b>
                                                </label>


                                                <label class="form-label">
                                                    @item.Name
                                                </label>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label">
                                                    <b>Account Number</b>
                                                </label>

                                                <label class="form-label">
                                                    @item.AccNum
                                                </label>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label">
                                                    <b>Account Type</b>
                                                </label>
                                                
                                                <label class="form-label">
                                                    @item.AccountType
                                                </label>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label">
                                                    <b>Balance</b>
                                                </label>
                                                
                                                <label class="form-label">
                                                    @item.Currency @item.Balance
                                                </label>
                                            </div>
                                        </div>




                                    </div>
                                </div>
                            </div>
                        </div>
                        }

                        else
                        {
                            <div class="card text-black" style="border-radius: 25px;">
                                <div class="card-body p-md-5">
                                    <div class="row justify-content-center">
                                        <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1 bg-success">
                                            <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Received Money</p>
                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <div class="form-outline flex-fill mb-0">
                                                    <label class="form-label">
                                                        <b>Name</b>
                                                    </label>

                                                    <label class="form-label">
                                                        @item.Name
                                                    </label>
                                                </div>
                                            </div>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <div class="form-outline flex-fill mb-0">
                                                    <label class="form-label">
                                                        <b>Account Name</b>
                                                    </label>

                                                    <label class="form-label">
                                                        @item.AccNum
                                                    </label>
                                                </div>
                                            </div>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <div class="form-outline flex-fill mb-0">
                                                    <label class="form-label">
                                                        <b>Account Type</b>
                                                    </label>

                                                    <label class="form-label">
                                                        @item.AccountType
                                                    </label>
                                                </div>
                                            </div>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <div class="form-outline flex-fill mb-0">
                                                    <label class="form-label">
                                                        <b>Balance</b>
                                                    </label>

                                                    <label class="form-label">
                                                        @item.Currency @item.Balance
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                }

                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="button" class="btn btn-primary btn-lg">Print</button>
                </div>
            </div>
        </div>
    </div>
</section>
